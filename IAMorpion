#include "projetgl.h"

short tab1[9] = {1,2,3,4,5,6,7,8,9};
short carre_magique[9] = {8,1,6,3,5,7,4,9,2};
int i;

int test_case(carre_magique[i]){
        if(carre_magique[i]>0) return 1;
        if(carre_magique[i]<0) return -1;
        if(carre_magique[i]==0) return 0;
}

int test_case_vide(void){
    int i;
    int cpt = 0;
    for(i=0;i<8;i++){
        if(test_case()==0) return 0;
        if(test_case()!=0){
            cpt = cpt+1;
        }
     if(cpt==9) return 1;
}
}
int valeur_carre(void){
    int i;
    for(i=0;i<8;i++){
        if(test_case()==1){
            carre_magique[i] =  carre_magique[i];
        }
        if(test_case()==-1){
           carre_magique[i] = -carre_magique[i];
        }
   }
}

